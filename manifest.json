{
  "manifest_version": 2,
  "name": "Muppet Politics",
  "description": "Radical Software Extension Project",
  "version": "1.0",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
   "128": "images/icon.png"
}
}
